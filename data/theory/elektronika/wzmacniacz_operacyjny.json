      { "type": "Header", "value": "Wzmacniacz odwracający" },
      {
        "type": "Math",
        "value": "`U_{wy}=-R_2/R_1*U_{we}`"
      },
      {
        "type": "Image",
        "value": "https://i.postimg.cc/t49x0qgr/image.png",
        "props": {
          "orientation": "horizontal"
        }
      },
      { "type": "Header", "value": "Wzmacniacz nieodwracający" },
      {
        "type": "Math",
        "value": "`U_{wy}=((R_1+R_2)/R_1)*U_{we}`"
      },
      {
        "type": "Image",
        "value": "https://i.postimg.cc/wv5zdpMV/image.png",
        "props": {
          "orientation": "horizontal"
        }
      },
      { "type": "Header", "value": "Wzmacniacz całkujący" },
      {
        "type": "Math",
        "value": "`U_{wy}=-1/(R_1*C)*int_0^T U_{we} dt`"
      },
      {
        "type": "Image",
        "value": "https://i.postimg.cc/CK1JgHK6/image.png",
        "props": {
          "orientation": "horizontal"
        }
      },
      { "type": "Header", "value": "Wzmacniacz różniczkujący" },
      {
        "type": "Math",
        "value": "`U_{wy}=-R_2*C*(dU_{we})/dt`"
      },
      {
        "type": "Image",
        "value": "https://i.postimg.cc/tTF6QYFM/image.png",
        "props": {
          "orientation": "horizontal"
        }
      },
      { "type": "Header", "value": "Wzmacniacz sumujący" },
      {
        "type": "Math",
        "value": "`U_{wy}=-R(U_{we1}/R_1 + U_{we2}/R_2 + ... + U_{wen}/R_n)`"
      },
      {
        "type": "Image",
        "value": "https://i.postimg.cc/Y94341TD/image.png",
