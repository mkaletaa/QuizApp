  {
    "title": "wzmocnienie",
    "data": [
      {
        "type": "Text",
        "value": "<b>Wzmocnienie</b> - stosuenk wartości skutecznej sygnału wyjściowego do wartości skutecznej sygnału wejściowego."
      },
      {
        "type": "Text",
        "value": "wzmocnienie napięciowe woltowe"
      },
      {
        "type": "Math",
        "value": "`K_u = U_{wy}/U_{we} [V/V]`"
      },
      {
        "type": "Text",
        "value": "wzmocnienie napięciowe decybelowe"
      },
      {
        "type": "Math",
        "value": "`K_u = 20log(U_{wy}/U_{we}) [dB]`"
      },
      {
        "type": "Text",
        "value": "wzmocnienie prądowe amperowe"
      },
      {
        "type": "Math",
        "value": "`K_i = I_{wy}/I_{we} [A/A]`"
      },
      {
        "type": "Text",
        "value": "wzmocnienie prądowe decybelowe"
      },
      {
        "type": "Math",
        "value": "`K_i = 20log(I_{wy}/I_{we}) [dB]`"
      },
      {
        "type": "Text",
        "value": "wzmocnienie mocy watowe"
      },
      {
        "type": "Math",
        "value": "`K_p = P_{wy}/P_{we} [W/W]`"
      },
      {
        "type": "Text",
        "value": "wzmocnienie mocy decybelowe"
      },
      {
        "type": "Math",
        "value": "`K_p = 10log(P_{wy}/P_{we}) [dB]`"
      }
    ]
  },
